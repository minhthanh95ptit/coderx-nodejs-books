html
  h1 Login

  if errors
    each error in errors 
      .alert.alert-danger= error

  form(action="/auth/login", method="POST")
    label(for="email" ) Email 
    br
    input(type="text" id="email" name="email", value=values ? values.email : '')  
    br
    label(for="password") Password
    br
    input(type="password" id="password" name="password", value=values ? values.password : '' ) 
    br
    button Login