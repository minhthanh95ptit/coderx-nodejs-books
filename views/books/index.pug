extends ../layouts/common.pug 

block content
  body

    h2 Books

    a(href="books/create") Add Book
    table
      tr
        th Id
        th Title
        th Description
        th
      each book in books
        tr
          td #{ book.id }
          td #{ book.title }
          td #{ book.description }
          td 
            a(href="/books/" + book.id + "/update") Sửa
            span &nbsp 
            a(href="/books/" + book.id + "/delete") Xóa