      label(for="name" ) Tên
      br 
      input.form-control(type="text" id="name" name="name", value=values ? values.name : '')  
    .form-group 
      label(for="adress") Địa chỉ
      br
      input.form-control(type="text" id="adress" name="address", value=values ? values.address : '' ) 
    .form-group
      label(for="phone") Số điện thoại
      br
      input.form-control(type="text" id="phone" name="phone",value=values ? values.phone : '')
